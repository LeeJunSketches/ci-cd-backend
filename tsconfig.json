{
  "compilerOptions": {
    "disableReferencedProjectLoad": true,             
    "target": "es2016",                                 
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "./**/*.ts"],
  "exclude": ["node_modules", "test", "dist"]
}
